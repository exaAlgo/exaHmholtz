@kernel void scaledAdd(const exaUInt N,
                      const exaScalar alpha,
                      @restrict const exaScalar *x,
                      const exaScalar beta,
                      @restrict exaScalar *y)
{
  for(exaUInt n=0;n<N;++n;@tile(256,@outer,@inner)){
    if(n<N){
      y[n] = alpha*x[n] + beta*y[n];
    }
  }
}
